<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <ProgressBar
	        android:id="@+id/loading_sy"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_centerInParent="true"
	        android:visibility="invisible"/>
    
    <TextView 
	    android:id="@+id/check_network_sy"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:gravity="center"
	    android:text="네트워크 연결 오류"
	    android:visibility="invisible"
	    />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:weightSum="10"
        >
        
        
		     <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="0.35"
		 		android:orientation="horizontal"
		 		android:weightSum="10"
		        
		        >
		        <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.55"
				        
				        />
		         
		          <TextView 
				        android:id="@+id/sy_cour_title"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="9.45"
				        android:gravity="center_vertical|bottom"
				        android:textSize="11dp"
				        android:textColor="#000000"
				        />
		         
		         
		     </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="0.9"
		        android:orientation="horizontal"
		        android:weightSum="10"
		        >
		
		    
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.55"
				        
				        />
				    <TextView 
				        android:id="@+id/subject_num"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="1.4"
				        android:gravity="center_vertical"
				        android:text="교과목\n번호"
				        android:textSize="13dp"
				        android:textColor="#000000"
				        android:padding="4dp"
				        />
				    
				    <TextView 
				        android:id="@+id/subject_title"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="4.76"
				        android:gravity="center_vertical|left"
				        android:text="교과목명"
				        android:textSize="13dp"
				        android:textColor="#000000"
				        android:padding="4dp"
				        
				        />
				    
				    <TextView 
				        android:id="@+id/subject_pro"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="1.6"
				        android:gravity="center_vertical|left"
				        android:text="담당교수"
				        android:textSize="13dp"
				        android:textColor="#000000"
				        android:padding="4dp"
				        
				        />
				    
				 
				     <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="1.71"
				        android:orientation="horizontal"
				        android:weightSum="3"
				        >
				        
				            <TextView 
						        android:layout_width="0dp"
				             	android:layout_height="match_parent"
				            	android:layout_weight="1"
						        android:gravity="center_vertical"
						        android:text="정\n원"
						        android:textSize="12dp"
						        android:textColor="#000000"
						        
						        />
				            
				            <TextView 
						        android:layout_width="0dp"
					            android:layout_height="match_parent"
					            android:layout_weight="1"
						        android:gravity="center_vertical"
						        android:text="신\n청"
						        android:textSize="12dp"
						        android:textColor="#000000"
						        
						        />
				             
				            
				            <TextView 
						        android:layout_width="0dp"
				            	android:layout_height="match_parent"
				           		android:layout_weight="1"
						        android:gravity="center_vertical"
						        android:text="꾸\n러\n미"
						        android:textSize="12dp"
						        android:textColor="#000000"
						        
						        />
				             
				             
				             
				         </LinearLayout>
				         
				         
				         
		        
		        
		        
		        
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="0.05"
		        android:background="#797977"
		        
		        />
		    
		    
		    <ListView
		        android:id="@+id/sy_list" 
		        android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="8.7"
		        >
		        
		        
		    </ListView>
    </LinearLayout>
    
</RelativeLayout>
